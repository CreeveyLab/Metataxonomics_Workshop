# Set cut off for filtering of taxonomy assignments from RDP
PID_CUTOFF="80";
TAXONOMY_FILE="fixrank_OTU.fas_classified.txt"

# Run filter of taxonomy results from RDP
grep "^OTU[0-9]*;" $TAXONOMY_FILE | tr ';' ' ' | tr -d '%' | awk '{ printf $1" "; taxa=3; PID=4;  while( taxa < NF ) { if( $PID >= $PID_CUTOFF ) { printf $taxa" "} taxa=taxa+2; PID=PID+2 } printf "\n" }'
